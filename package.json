{
  "name": "event-administration-app",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "lint": "ng lint",
    "format": "prettier --write .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:server": "jest ./server",
    "test:client": "jest ./client",
    "test:e2e": "ng e2e",
    "test:e2e:open": "cypress open",
    "clean": "rm -rf ./dist/api && rm -rf ./dist/public/",
    "cp:www": "mkdirp ./dist/api/bin && cp ./server/bin/www ./dist/api/bin/",
    "delete:lockfile": "rm -f ./node_modules/@angular/compiler-cli/ngcc/ngcc_lock_file_",
    "docker:serve": "ng serve --host 0.0.0.0 --poll 1000",
    "dev": "npm run delete:lockfile && npm run clean && npm run cp:www && tsc -p ./server/tsconfig.api.json && concurrently -k \"tsc -p ./server/tsconfig.api.json -w\" \"nodemon -r ./dist/api/bin/www --watch\" \"ng build --watch --poll 1000\"",
    "dev:server": "concurrently -k \"tsc -p ./server/tsconfig.api.json -w\" \"nodemon -r ./dist/api/bin/www --watch\"",
    "build": "npm run clean && npm run cp:www && tsc -p ./server/tsconfig.api.json && ng build",
    "server": "node ./dist/api/bin/www"
  },
  "engines": {
    "node": "^12 || ^14",
    "npm": "^6"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.0",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.2.0",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/router": "~12.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "mongoose": "^5.13.11",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.9",
    "@angular-eslint/builder": "^12.5.0",
    "@angular-eslint/eslint-plugin": "^12.5.0",
    "@angular-eslint/eslint-plugin-template": "^12.5.0",
    "@angular-eslint/schematics": "^12.5.0",
    "@angular-eslint/template-parser": "^12.5.0",
    "@angular/cli": "~12.2.9",
    "@angular/compiler-cli": "~12.2.0",
    "@cypress/schematic": "^1.5.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "concurrently": "^6.3.0",
    "cypress": "^8.6.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "jest-preset-angular": "^10.0.1",
    "mkdirp": "^1.0.4",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-node": "^10.3.0",
    "typescript": "~4.3.5"
  }
}
